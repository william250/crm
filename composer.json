{
    "name": "empresa/crm-system",
    "description": "Sistema CRM Empresarial completo",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true
    }
}